@model IEnumerable<_036_MoviesMvcWissen.Models.Demos.Templates.PersonModel>

@{ 
        var ajaxOptions = new AjaxOptions()
        {
            AllowCache = false,
            UpdateTargetId="div_users",
            InsertionMode = InsertionMode.Replace,
            Confirm = "Are you sure?",
            OnSuccess = "successful",
            OnFailure="error"
            
            
        };

}

<table class="table">
    <tr>
        <th>

        </th>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GraduateFromUniversity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdentityNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Ajax.ActionLink("Delete","DeletePersonAjax","Demos", new {id=item.Id }, ajaxOptions )
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GraduateFromUniversity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdentityNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>

        </tr>
    }

</table>
<label id="lMessage" style="color:red;"></label>
<script>
    function successful()
    {
        alert("Operation successful.");
        $("#lMessage").text("Operation successful.");
        console.log("Operation successful");
    }
    function error()
    {
        $("#lMessage").text("Operation failed.");
    }
</script>
