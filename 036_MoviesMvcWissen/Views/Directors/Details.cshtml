@model _036_MoviesMvcWissen.Entities.Director

@{
    ViewBag.Title = "Details";
    var movieDirectors = Model.MovieDirectors;
    var movies = "";

    foreach (var movieDirector in movieDirectors)
    {
        movies += movieDirector.Movie.Name + ", ";
    }
    movies = movies.Trim(',', ' ');
}

<h2>Details</h2>

<div>
    <h4>Director</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Surname)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Surname)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Retired)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Retired)
        </dd>
        <dt>
            @Html.Label("Movies")
        </dt>

        <dd>
           @movies
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>
