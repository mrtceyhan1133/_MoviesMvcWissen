@model _036_MoviesMvcWissen.Models.ViewModels.MoviesIndexViewModel


@using _036_MoviesMvcWissen.Helpers
@{

    ViewBag.Title = "List";
    
}

<h2>List</h2>

<p>

</p>
@using (Html.BeginForm("List","Movies",FormMethod.Get))
{
    <div class="row">
        <div class="col-md-2">
            @Html.Label("lbName", "Name:")

        </div>
        <div class="col-md-10">
            @Html.TextBox("Name", "", new { @class = "form-control", id = "lbName" })
        </div>
    </div>
        <div class="row">
        <div class="col-md-2">
            @Html.Label("lbProductionYear", "ProductionYear:")
        </div>
        
        <div class="col-md-10">
            @Html.DropDownList("YearId", Model.Years, "--All--", new { @class = "form-control", id = "lbProductionYear" })
        </div>
    </div>
    <div class="row"><br />
        <div class="col-md-2">
            @Html.Label("lbBoxOfficeReturn","Box Office Return")
        </div>
        <div class="col-md-5">
            @Html.Label("lbMin","Min : ")
            @Html.TextBox("Min","",new {style="width:80%", @class="",id="lbMin",placeholder="Minimum " })
        </div>
        <div class="col-md-5">
            @Html.Label("lbMax", "Max : ")
            @Html.TextBox("Max", "", new {style="width:80%", @class = "", id = "lbMax", placeholder = "Maximum :  " })
        </div>
    </div>
    <div class="row">
        <div class="col-md-1">
            @Html.Button("Search", "btn btn-primary", "submit")

        </div>
        <div class="col-md-1">
            <a class="btn btn-secondary" href="@Url.RouteUrl("Default",new {controller = "Movies",action ="List"  })">Clear</a>

        </div>
    </div>

}




<table class="table">
    <tr>
        <th>
            @Html.Label("Movies Name")
        </th>
        <th>
            @Html.Label("Production Year")
        </th>
        <th>
            @Html.Label("BoxOfficeReturn")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Movies)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductionYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BoxOfficeReturn)
            </td>
            
        </tr>
    }

</table>
